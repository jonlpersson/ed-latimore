---
layout: default
---
{% include "_partials/shortcodes" %}

<section class="s-sm bg-gray-light">
    <div class="max-w-screen-md mx-auto">
        <div class="label-section">{{tags|first}}</div>
        <div class="max-w-screen-md">
            <h1>{{ title }}</h1>
            <p class="lg:w-3/4 font-sans text-base sm:text-md md:text-lg">{{ description }}</p>
            <div class="flex flex-row flex-nowrap items-center space-x-4 mt-8">
                <img
                    src="{{ author.small_image }}"
                    class="rounded-full w-12 h-12"
                    alt="{{ author.name }}">
                <div class="text-xs md:text-sm font-sans">
                    <p>{{ author.name }}</p>
                    <p class="text-gray-dark text-opacity-50">{{ author.description }}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="s-sm">
    <div class="max-w-screen-md mx-auto">
        <div class="max-w-xl prose lg:text-lg">
            {{layoutContent}}
        </div>
    </div>
</section>

<section class="s-sm bg-gray-light">
    <div class="max-w-screen-md mx-auto">
        <div class="flex flex-col space-y-5 md:flex-row md:space-y-0 md:space-x-10">
            <img
                src="{{ author.medium_image }}"
                class="rounded-full w-32 h-32"
                alt="{{ author.name }}">
            <div>
                <div class="label-section">About the author</div>
                <h4 class="mt-6 mb-2">{{ author.name }}</h4>
                <p class="text-sm md:text-base">{{ author.bio }}</p>
                <p class="mt-2 text-sm md:text-base"><a class="link" href="https://twitter.com/{{ author.twitter }}" rel="nofollow" target="_blank">Follow me on Twitter.</a></p>
            </div>
        </div>
    </div>
</section>

<section class="s-sm bg-navy">
    <div class="max-w-screen-xl mx-auto space-y-10">
        <div class="label-section text-gray-light border-gray-light border-opacity-50">Related ideas</div>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
            {% for item in collections[tags] limit:3 %}
            <a class="bg-white flex flex-col micro-float" href="{{ item.url }}">
                <div class="aspect-w-16 aspect-h-10">
                    <img
                        src="{{ item.data.image }}"
                        class="object-cover"
                        alt="Thumbnail for {{ item.data.title }}"
                        height="360"
                        width="627">
                </div>
                <div class="px-6 py-4">
                    <h4 class="mt-4 mb-2">{{ item.data.title }}</h4>
                    <p class="text-sm md:text-base">{{ item.data.description }}</p>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
