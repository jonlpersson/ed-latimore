{%- capture seoTitleAppended -%}
    {%- if page.title == nil -%}
        {{site.title|smartify}}
    {%- else -%}
        {%- if page.title.size <= 47 -%}
            {{page.title|smartify}} | {{site.title|smartify}}
        {% else %}
            {{page.title|smartify}}
        {%- endif -%}
    {%- endif -%}
{%- endcapture -%}
{%- capture seoTitle -%}{{page.title|default:site.title|smartify}}{%- endcapture -%}
{%- capture seoDescription -%}{{page.description|default:site.description|smartify}}{%- endcapture -%}
{%- capture seoCanonical -%}{{page.url|absolute_url}}{%- endcapture -%}
{%- capture seoImage -%}{{page.image|absolute_url}}{%- endcapture -%}
{%- capture seoOpenGraphType -%}
{%- if page.seo.type == "BlogPosting" -%}article{%- else -%}website{%- endif -%}
{%- endcapture -%}
{%- capture seoDatePublished -%}{{page.date|date_to_xmlschema}}{%- endcapture -%}
{%- capture seoDateModified -%}{{page.last_modified_at|date_to_xmlschema}}{%- endcapture -%}
<title>{{seoTitleAppended|strip}}</title>
<meta property="og:title" content="{{seoTitle}}" />
<meta name="author" content="{{site.author.name}}" />
<meta property="og:locale" content="en_US" />
<meta name="description" content="{{seoDescription}}" />
<meta property="og:description" content="{{seoDescription}}" />
<link rel="canonical" href="{{seoCanonical}}" />
<meta property="og:url" content="{{seoCanonical}}" />
<meta property="og:site_name" content="{{site.title|smartify}}" />
<meta property="og:image" content="{{seoImage}}" />
{%- if page.date -%}<meta property="og:type" content="{{seoOpenGraphType|strip}}" />{%- endif -%}
<meta property="article:published_time" content="{{seoDatePublished}}" />
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:image" content="{{seoImage}}" />
<meta property="twitter:title" content="{{seoTitle}}" />
<meta name="twitter:site" content="@{{site.author.twitter}}" />
<meta name="twitter:creator" content="@{{site.author.twitter}}" />
<meta name="google-site-verification" content="{{site.webmaster_verifications.google}}" />
<script type="application/ld+json">
{
    "@context":"https://schema.org",
    "@type":"{{page.seo.type}}",
    {% if page.seo.type == "BlogPosting" %}"headline":"{{seoTitle}}",{% else %}"name":"{{seoTitle}}",{% endif %}
    "author":{
        "@type":"Person",
        "name":"{{page.author|default:"Jon Persson"}}"
    },
    "datePublished":"{{seoDatePublished}}",
    "dateModified":"{{seoDateModified}}",
    "description":"{{seoDescription}}",
    "image":"{{seoImage}}",
    "url":"{{seoCanonical}}",
    {% if page.seo.type == "Product" %}"offers": {
        "@type": "Offer",
        "url": "{{seoCanonical}}",
        "priceCurrency": "USD",
        "price": "
            {%- if page.pricing.campaign -%}{{page.pricing.campaign|remove:"$"}}{%- else -%}{{page.pricing.retail|remove:"$"}}{%- endif -%}
        ",
        "availability": "https://schema.org/OnlineOnly"
    },{% endif %}
    "publisher":{
        "@type":"Organization",
        "logo":{
            "@type":"ImageObject",
            "url":"{{site.logo|absolute_url}}"
        },
        "name":"{{site.title|smartify}}"
    }
}
</script>