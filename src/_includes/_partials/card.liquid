{% case type %}
    {% when "product" %}
    <a class="bg-white shadow flex flex-col micro-float" href="{{ item.url }}">
        <div class="bg-gray-light w-full aspect-w-16 aspect-h-10">
            {% image item.data.image, item.data.title, "object-contain h-full", "(min-width: 1024px) 45vw, (min-width: 640px) 45vw, 96vw" %}
        </div>
        <div class="px-6 py-4 mb-4 flex-grow">
            <h3 class="mt-4 mb-2">
                <div class="text-gray">{{ item.data.type | append:": " }}</div>
                {{ item.data.title }}
            </h3>
        </div>
        <div class="px-6 label text-gray-dark text-opacity-50">
            <div class="py-4 border-t-2 border-gray-100 flex justify-between">
                <p>{{ item.data.product_info.price }}</p>
                <p>Learn more &rarr;</p>
            </div>
        </div>
    </a>
    {% else %}
    <a class="bg-white shadow flex flex-col micro-float" href="{{item.url}}">
        <div class="bg-gray-light w-full aspect-w-16 aspect-h-10">
            {% image item.data.image, item.data.title, "object-cover h-full", "(min-width: 1024px) 410px, (min-width: 640px) 45vw, 96vw" %}
        </div>
        <div class="px-6 py-4 mb-4 flex-grow">
            <h3 class="mt-4 mb-2">{{ item.data.title }}</h3>
            <p>{{item.data.description}}</p>
        </div>
        {% unless type == "minimal" %}
        <div class="px-6 label text-gray-dark text-opacity-50">
            <div class="py-4 border-t-2 border-gray-100">
                <p>{{ item.data.tags[0] | replace:"-"," " | capitalize }}</p>
                <p>{{ item.data.date | date: "%b %d, %Y" }}</p>
            </div>
        </div>
        {% endunless %}
    </a>
{% endcase %}