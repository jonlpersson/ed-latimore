{% comment %} Product sorting {% endcomment %}
{% assign recentProducts = collections.products | reverse %}

<section class="s-sm">
    <div class="max-w-screen-xl mx-auto space-y-10">
        <div class="grid sm:grid-cols-2 gap-5">
        {% for item in recentProducts %}
            {% include "_partials/card" type:"product" %}
        {% endfor %}
        </div>
    </div>
</section>