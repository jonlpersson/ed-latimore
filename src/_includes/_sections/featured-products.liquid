{% comment %} Product sorting {% endcomment %}
{% assign recentProducts = collections.products | reverse %}

<section class="s-sm bg-gray">
    <div class="max-w-screen-xl mx-auto space-y-10">
        <div class="label-section border-gray-dark border-opacity-25 flex justify-between">
            <div>Popular products</div>
            <a class="text-coral hover:text-maroon" href="/products/">View more products &rarr;</a>
        </div>
        <div class="grid sm:grid-cols-2 gap-5">
        {% for item in recentProducts limit:3 %}
            <a class="bg-white shadow flex flex-col micro-float" href="{{item.url}}">
                <div class="bg-gray-light w-full aspect-w-16 aspect-h-10">
                    <img
                        src="{{ item.data.image }}"
                        class="object-contain"
                        alt="Thumbnail for {{ item.data.title }}"
                        height="360"
                        width="627">
                </div>
                <div class="px-6 py-4 mb-4 flex-grow">
                    <h3 class="mt-4 mb-2">
                        <div class="text-gray">{{ item.data.type | append:": " }}</div>
                        {{ item.data.title }}
                    </h3>
                </div>
                <div class="px-6 label text-gray-dark text-opacity-50">
                    <div class="py-4 border-t-2 border-gray-100 flex justify-between">
                        <p>{{ item.data.product_info.price }}</p>
                        <p>Learn more &rarr;</p>
                    </div>
                </div>
            </a>
        {% endfor %}
        </div>
    </div>
</section>